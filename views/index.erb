    <meta property="og:image" content="https://andrewyangintro.com/assets/social-thumb-videos-3.png?reindex=2" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://andrewyangintro.com" />
    <meta property="og:title" content="An Introduction to Andrew Yang" />
