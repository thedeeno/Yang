    <title><%= I18n.t('title') %></title>
    <link rel="stylesheet" href="main.css" />
    <link href="https://fonts.googleapis.com/css?family=Roboto|Roboto+Slab&display=swap" rel="stylesheet" />
    <meta name="description" content="See how his platform is the best way to move us forward in the 21st century" />
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:description" content="See how his platform is the best way to move us forward in the 21st century" />
    <meta name="twitter:title" content="An Introduction to Andrew Yang" />
    <meta name="twitter:image" content="https://andrewyangintro.com/assets/social-thumb-videos-3.png?reindex=1" />
    <meta name="twitter:creator" content="@ericcurtis" />
